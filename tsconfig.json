{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "types": ["expo", "expo-router", "node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@lib/*": ["lib/*"],
      "@features/*": ["features/*"],
      "@types/*": ["types/*"]
    }
  },
  "include": [
    "app",
    "lib",
    "features",
    "components",
    "types",
    "app.config.ts",
    "metro.config.js",
    "babel.config.js",
    "index.ts",
    "index.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "declarations.d.ts"
  ]
}
